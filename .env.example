# ============================================
# DATABASE & SUPABASE
# ============================================
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
DATABASE_URL=postgresql://user:password@host:5432/database

# ============================================
# MULTI-TENANT CONFIGURATION
# ============================================
# Default tenant ID for development (created by migration)
DEFAULT_TENANT_ID=00000000-0000-0000-0000-000000000001

# ============================================
# WHATSAPP BUSINESS CLOUD API (Meta Official)
# ============================================
# Get these from https://developers.facebook.com/apps → WhatsApp → API Setup
WHATSAPP_API_TOKEN=your_permanent_or_temporary_access_token
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_custom_verify_token
WHATSAPP_API_VERSION=v21.0

# ============================================
# REDIS (Required for production)
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_PASSWORD=
# REDIS_DB=0

# ============================================
# QUEUE CONFIGURATION
# ============================================
QUEUE_CONCURRENCY=5
QUEUE_MAX_RETRIES=3
QUEUE_RETRY_DELAY=2000

# ============================================
# GOOGLE MAPS API (Optional)
# ============================================
# Get your API key from: https://console.cloud.google.com/google/maps-apis
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# ============================================
# MONITORING & LOGGING (Optional)
# ============================================
# SENTRY_DSN=
# LOG_LEVEL=info

# ============================================
# SECURITY
# ============================================
# SESSION_SECRET=your_session_secret_here
# JWT_SECRET=your_jwt_secret_here

# ============================================
# FEATURE FLAGS (Optional)
# ============================================
# ENABLE_CHATBOT=true
# ENABLE_BROADCAST=true
# ENABLE_ANALYTICS=true
# ENABLE_AUDIT_UI=true
